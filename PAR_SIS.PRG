PROCEDURE PAR_SIS()
CLS
SELECT CONFIG
@  0, 0 TO 22,79 DOUBLE
@  0, 2 SAY " CAMBIAR PARAMETROS DEL SISTEMA "
@  6,20 TO 20,58 DOUBLE
@  8,24 PROMPT "1 - PATH PARA EL D.O.S.        " MESSAGE'CAMBIAR EL PATH PARA LA BUSQUEDA DE LOS COMANDOS BACKUP Y RESTORE DEL D.O.S.'
@ 10,24 PROMPT "2 - UNIDAD DE DISCO RIGIDO     " MESSAGE'CAMBIAR DE UNIDAD DE DISCO DONDE ESTA INSTALADO EL PROGRAMA'
@ 12,24 PROMPT "3 - UNIDAD DE DISCOS RESPALDO  " MESSAGE'CAMBIAR DE UNIDAD DE DISCOS PARA RESPALDO DE INFORMACION'
@ 14,24 PROMPT "4 - IMPRESORA                  " MESSAGE'CAMBIAR EL TIPO DE IMPRESORA'
@ 16,24 PROMPT "5 - COLOR DEL MONITOR          " MESSAGE'CAMBIAR LA SALIDA POR PANTALLA A COLORES / MONOCROMO'
@ 18,24 PROMPT "6 - CAMBIAR DE GUACHERA        " MESSAGE'CAMBIAR LA GUACHERA DEL TAMBO'
MENU TO SIS
@24, 0 CLEAR
DO CASE
   CASE SIS=1
      CLS
      PRIVATE DV := SPACE(1) , PA := SPACE(20)
      @ 0,0 TO 22,79 DOUBLE
      @  0, 2 SAY " CAMBIAR PATH DE COMANDOS DEL D.O.S. "
      @  4,26 SAY "EL PATH ACTUAL ES"
      SETCOLOR(INVER)
      @  4,44 SAY ALLTRIM(PATHDOS)
      @  7,42 SAY':\'
      SETCOLOR(COMUN)
      @  7,18 SAY "INGRESE EL NUEVO PATH:" GET DV PICTURE '@! A' VALID( DV='A' .OR. DV='B' .OR. DV='C' .OR. DV='D' .OR. DV='E' )
      @  7,44 GET PA PICTURE'@!'
      SET CURSOR ON
      SET CONFIRM OFF
      READ
      SET CONFIRM ON
      SET CURSOR OFF
      IF ACEPTA()
         REPLACE PATHDOS WITH DV+':\'+ALLTRIM(PA)
         DOSPATH = DV+':\'+ALLTRIM(PA)
      ENDIF



   CASE SIS=2
      CLS
      DRIVE = RIGIDO
      @  0, 0 TO 22,79 DOUBLE
      @  0, 2 SAY " CAMBIAR DE UNIDAD DE DISCO RIGIDO "
      @  3,20 SAY "LA UNIDAD DE DISCO RIGIDO ACTUAL ES:"
      SETCOLOR(INVER)
      @  3,61 SAY RIGIDO
      SETCOLOR(COMUN)
      @  5,20 SAY "CAMBIA A :" GET DRIVE PICTURE "@! A:" VALID DRIVE >= "C:"
      SET CURSOR ON
      SET CONFIRM OFF
      READ
      SET CONFIRM ON
      SET CURSOR OFF
      IF ACEPTA()
         REPLACE RIGIDO WITH DRIVE
         DOSRIGID = DRIVE
      ENDIF
   CASE SIS=3
      CLS
      @  0, 0 TO 22,79 DOUBLE
      @  0, 2 SAY " CAMBIAR DE UNIDAD DE DISCOS FLEXIBLES "
      @  3,18 SAY "LA UNIDAD DE DISCOS FLEXIBLES ACTUAL ES:"
      SETCOLOR(INVER)
      @  3,59 SAY FLEXIBLE
      SETCOLOR(COMUN)
      DRIVE = DOSDRIVE
      @  5,18 SAY "CAMBIA A : " GET DRIVE PICTURE "@! A:"
      SET CURSOR ON
      SET CONFIRM OFF
      READ
      SET CONFIRM ON
      SET CURSOR OFF
      IF ACEPTA()
         REPLACE FLEXIBLE WITH DRIVE
         DOSDRIVE = DRIVE
      ENDIF
   CASE SIS=4
      CLS
      @  0, 0 TO 22,79 DOUBLE
      @  0, 2 SAY " CAMBIAR EL TIPO DE IMPRESORA "
      @  3,18 SAY "LA IMPRESORA SELECCIONADA ES:"
      SETCOLOR(INVER)
      @  3,48 SAY IMPRES
      SETCOLOR(COMUN)
      @  5,18 SAY "CAMBIA A : "
      PANT:=SAVESCREEN( 5,29,10,45)
      @  5,29 TO 10,45
      SELECT IMPRES
      TI:={}
      DBEVAL( { || AADD(TI,IMPRES) } )
      RE:=ACHOICE( 6,30, 9,44,TI,,"ACH_FUN")
      GO RE
      IM:=IMPRES
      RESTSCREEN( 5,29,10,45,PANT)
      SETCOLOR(INVER)
      @ 5,29 SAY IM
      SETCOLOR(COMUN)
      SELECT CONFIG
      IF ACEPTA()
         REPLACE IMPRES WITH IM
      ENDIF
   CASE SIS = 5
      SELECT CONFIG
      CLS
      @  0, 0 TO 22,79 DOUBLE
      @  0, 2 SAY " CAMBIAR EL COLOR DE LA SALIDA POR PANTALLA "
      @  3,18 SAY "EL TIPO SALIDA SELECCIONADO ES:"
      SETCOLOR(INVER)
      @  3,50 SAY IF(COLOR,'COLORES','MONOCROMO')
      SETCOLOR(COMUN)
      @  5,18 SAY "CAMBIA A : "
      PANT:=SAVESCREEN( 5,29, 8,39)
      @  5,29 TO  8,39
      @ 6,30 PROMPT 'MONOCROMO'
      @ 7,30 PROMPT 'COLORES  '
      MENU TO CO
      IF CO = 1
         CO = .F.
      ELSEIF CO = 2
         CO = .T.
      ELSE
         RETURN
      ENDIF
      RESTSCREEN( 5,29, 8,39,PANT)
      SETCOLOR(INVER)
      @ 5,29 SAY IF(CO,'COLORES','MONOCROMO')
      SETCOLOR(COMUN)
      IF ACEPTA()
         REPLACE COLOR WITH CO
         IF CO
            COMUN = "BG+/B, W+/N,,,BG+/N"
            INVER = "W+/R, BG+/B,,,W+/R"
            TITIL = "W+/R*, BG+/B*,,,W+/R*"
            NEGRO = "W+/N"
         ELSE
            COMUN = "W/N,N/W+,,,N/W"
            INVER = "N/W,W+/N,,,N/W"
            TITIL = "I*"
            NEGRO = "W+/N"
         ENDIF
      ENDIF
   CASE SIS = 6


      CLS
      private c_tam:=0
      aeval( tambos, { || c_tam++} )

      @ 0, 0 TO 23,79 DOUBLE
      @ 0, 2 SAY " CAMBIAR DE GUACHERA "
      UL=IF(C_tam>11,18,C_tam+7)
      @  6,31 TO UL+2,46 DOUBLE
      PRIVATE TSE:= ACHOICE( 8,34,UL,43, tambos)
      if tse = 0
         retu
      endi

      @  6,31 CLEAR TO UL+2,46
      @  6,31 TO 8,46 DOUBLE
      SETCOLOR(INVER)
      @  7,34 SAY TAMBOS[TSE]
      SETCOLOR(COMUN)

      IF ACEPTA()
         SELECT CONFIG
         PRIVATE D_GUA := "..\" + ALLTRIM(TAMBOS[TSE]) + "\"
         REPLACE GUACHE WITH D_GUA
         SELECT GUACHE
         USE (D_GUA+"GUACHE") INDEX (D_GUA+"GUACHE")
         SELECT ENFGUA
         USE (D_GUA+"ENFGUA") INDEX (D_GUA+"ENFGUA")
      ENDIF


   OTHERWISE
      RETURN
ENDCASE

COMMIT
