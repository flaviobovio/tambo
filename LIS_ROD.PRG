PROCEDURE LIS_ROD()
CLS
@ 0,0 TO 23,79 DOUBLE
@  0, 2 SAY " LISTADOS DE RODEOS "
@ 4,31 TO 16,46 DOUBLE
@  6,34 PROMPT "1-RODEO 1 " MESSAGE 'VACAS ENTRE 0 Y 35 DIAS DE PARIDAS O CON METRITIS'
@  7,34 PROMPT "2-RODEO 2 " MESSAGE 'VACAS ENTRE 36 Y 100 DIAS DE PARIDAS'
@  8,34 PROMPT "3-RODEO 3 " MESSAGE 'CON '+STR(RODEOS->RODEO3,2)+' O MAS LITROS'
@  9,34 PROMPT "4-RODEO 4 " MESSAGE 'ENTRE '+STR(RODEOS->RODE41,2)+' Y '+STR(RODEOS->RODE42,2)+' LITROS'
@ 10,34 PROMPT "5-RODEO 5 " MESSAGE 'ENTRE '+STR(RODEOS->RODE51,2)+' Y '+STR(RODEOS->RODE52,2)+' LITROS'
@ 11,34 PROMPT "6-RODEO 6 " MESSAGE 'VACAS DE PRIMERA PARICION'
@ 12,34 PROMPT "7-RODEO 7 " MESSAGE 'ENTRE '+STR(RODEOS->RODE71,2)+' Y '+STR(RODEOS->RODE72,2)+' LITROS'
@ 13,34 PROMPT "8-ENFERMAS" MESSAGE 'ENFERMAS'
@ 14,34 PROMPT "9-SECAS   " MESSAGE 'MENOS DE '+STR(RODEOS->RODEO9,2)+' DIEZ LITROS'
MENU TO RO
DO CASE
   CASE RO = 1
      SET RELATION TO CODVAC INTO ENFERM
      SET FILTER TO (dialac>=1 .and. DIAlac<=35 .AND. !MARENF) .OR. (MARENF .AND. (ENFERM->MOTIV1=" F 24" .OR. ENFERM->MOTIV1="F 25" .OR. ENFERM->MOTIV1="F 26"  .OR. ENFERM->MOTIV1="F 27") )
      COUNT FOR (dialac>=1 .and. DIAlac<=35 .AND. !MARENF) .OR. (MARENF .AND. (ENFERM->MOTIV1="F 24" .OR. ENFERM->MOTIV1="F 25" .OR. ENFERM->MOTIV1="F 26"  .OR. ENFERM->MOTIV1="F 27") ) TO VA
      SUM ULTPRO TO PK FOR (dialac>=1 .and. DIAlac<=35 .AND. !MARENF) .OR. (MARENF .AND. (ENFERM->MOTIV1="F 24" .OR. ENFERM->MOTIV1="F 25" .OR. ENFERM->MOTIV1="F 26"  .OR. ENFERM->MOTIV1="F 27") )
      ENC='LISTADO DEL RODEO 1, '+ALLTRIM(STR(VA))+' VACAS, '+ALLTRIM(STR(PK))+' Lts / '+ALLTRIM(STR(VA))+' VACAS = '+ALLTRIM(STR(PK/VA))
   CASE RO = 2
      SET FILTER TO DIA-FECPAR>=36 .AND. DIA-FECPAR<=100 .AND. !MARENF .AND. NROPAR>0
      COUNT FOR DIA-FECPAR>=36 .AND. DIA-FECPAR<=100 .AND. !MARENF .AND. NROPAR>0 TO VA
      SUM ULTPRO TO PK FOR DIA-FECPAR>=36 .AND. DIA-FECPAR<=100 .AND. !MARENF .AND. NROPAR>0
      ENC='LISTADO DEL RODEO 2, '+ALLTRIM(STR(VA))+' VACAS, '+ALLTRIM(STR(PK))+' Lts / '+ALLTRIM(STR(VA))+' VACAS = '+ALLTRIM(STR(PK/VA))
   CASE RO = 3
      @ 17,30 TO 19,49
      @ 18,33 SAY "MAS DE"
      @ 18,40 GET RODEOS->Rodeo3 PICTURE "99"
      @ 18,43 SAY "Lts."
      SET CURSOR ON
      READ
      SET CURSOR OFF
      SET FILTER TO ULTPRO>= RODEOS->RODEO3 .AND. DIALAC>100 .AND. !MARENF .AND. NROPAR>0
      COUNT FOR ULTPRO>= RODEOS->RODEO3 .AND. DIALAC>100 .AND. !MARENF .AND. nropar>0 TO VA
      SUM ULTPRO TO PK FOR ULTPRO>= RODEOS->RODEO3 .AND. DIALAC>100 .AND. !MARENF .AND. nropar>0
      ENC='LISTADO DEL RODEO 3, '+ALLTRIM(STR(VA))+' VACAS, '+ALLTRIM(STR(PK))+' Lts / '+ALLTRIM(STR(VA))+' VACAS = '+ALLTRIM(STR(PK/VA))
   CASE RO = 4
      @ 17,28 TO 19,51
      @ 18,31 SAY "ENTRE "
      @ 18,37 GET RODEOS->Rode41 PICTURE "99"
      @ 18,40 SAY "Y "
      @ 18,42 GET RODEOS->Rode42 PICTURE "99"
      @ 18,45 SAY "Lts."
      SET CURSOR ON
      READ
      SET CURSOR OFF
      SET FILTER TO ULTPRO>= RODEOS->RODE41 .AND. ULTPRO<= RODEOS->RODE42 .AND. DIALAC>100 .AND. !MARENF .AND. nropar>0
      COUNT FOR ULTPRO>= RODEOS->RODE41 .AND. ULTPRO<= RODEOS->RODE42 .AND. DIALAC>100 .AND. !MARENF .AND. nropar>0 TO VA
      SUM ULTPRO TO PK FOR ULTPRO>= RODEOS->RODE41 .AND. ULTPRO<= RODEOS->RODE42 .AND. DIALAC>100 .AND. !MARENF .AND. nropar>0
      ENC='LISTADO DEL RODEO 4, '+ALLTRIM(STR(VA))+' VACAS, '+ALLTRIM(STR(PK))+' Lts / '+ALLTRIM(STR(VA))+' VACAS = '+ALLTRIM(STR(PK/VA))
   CASE RO = 5
      @ 17,28 TO 19,51
      @ 18,31 SAY "ENTRE "
      @ 18,37 GET RODEOS->Rode51 PICTURE "99"
      @ 18,40 SAY "Y "
      @ 18,42 GET RODEOS->Rode52 PICTURE "99"
      @ 18,45 SAY "Lts."
      SET CURSOR ON
      READ
      SET CURSOR OFF
      SET FILTER TO ULTPRO>= RODEOS->RODE51 .AND. ULTPRO<= RODEOS->RODE52 .AND. !MARENF .AND. DIALAC>100 .AND. nropar>0
      COUNT FOR ULTPRO>= RODEOS->RODE51 .AND. ULTPRO<= RODEOS->RODE52 .AND. !MARENF .AND. DIALAC>100 .AND. nropar>0 TO VA
      SUM ULTPRO TO PK FOR ULTPRO>= RODEOS->RODE51 .AND. ULTPRO<= RODEOS->RODE52 .AND. !MARENF .AND. DIALAC>100 .AND. nropar>0
      ENC='LISTADO DEL RODEO 5, '+ALLTRIM(STR(VA))+' VACAS, '+ALLTRIM(STR(PK))+' Lts / '+ALLTRIM(STR(VA))+' VACAS = '+ALLTRIM(STR(PK/VA))
   CASE RO = 6
      SET FILTER TO DIALAC>35 .AND. NROPAR=1 .AND. !MARENF
      COUNT FOR DIALAC>35 .AND. NROPAR=1 .AND. !MARENF TO VA
      SUM ULTPRO TO PK FOR DIALAC>35 .AND. NROPAR=1 .AND. !MARENF
      ENC='LISTADO DEL RODEO 6, '+ALLTRIM(STR(VA))+' VACAS, '+ALLTRIM(STR(PK))+' Lts / '+ALLTRIM(STR(VA))+' VACAS = '+ALLTRIM(STR(PK/VA))
   CASE RO = 7
      @ 17,28 TO 19,51
      @ 18,31 SAY "ENTRE "
      @ 18,37 GET RODEOS->Rode71 PICTURE "99"
      @ 18,40 SAY "Y "
      @ 18,42 GET RODEOS->Rode72 PICTURE "99"
      @ 18,45 SAY "Lts."
      SET CURSOR ON
      READ
      SET CURSOR OFF
      SET FILTER TO ULTPRO>= RODEOS->RODE71 .AND. ULTPRO<= RODEOS->RODE72 .AND. DIALAC>100 .AND. !MARENF .AND. nropar>0
      COUNT FOR ULTPRO>= RODEOS->RODE71 .AND. ULTPRO<= RODEOS->RODE72 .AND. DIALAC>100 .AND. !MARENF .AND. nropar>0 TO VA
      SUM ULTPRO TO PK FOR ULTPRO>= RODEOS->RODE71 .AND. ULTPRO<= RODEOS->RODE72 .AND. DIALAC>100 .AND. !MARENF .AND. nropar>0
      ENC='LISTADO DEL RODEO 7, '+ALLTRIM(STR(VA))+' VACAS, '+ALLTRIM(STR(PK))+' Lts / '+ALLTRIM(STR(VA))+' VACAS = '+ALLTRIM(STR(PK/VA))
   CASE RO = 8
      SET RELATION TO CODVAC INTO ENFERM
      SET FILTER TO MARENF .AND. !(ENFERM->MOTIV1="F 24" .OR. ENFERM->MOTIV1="F 25" .OR. ENFERM->MOTIV1="F 26"  .OR. ENFERM->MOTIV1="F 27")
      COUNT FOR MARENF .AND. !(ENFERM->MOTIV1="F 24" .OR. ENFERM->MOTIV1="F 25" .OR. ENFERM->MOTIV1="F 26"  .OR. ENFERM->MOTIV1="F 27") TO VA
      SUM ULTPRO TO PK FOR MARENF .AND. !(ENFERM->MOTIV1="F 24" .OR. ENFERM->MOTIV1="F 25" .OR. ENFERM->MOTIV1="F 26"  .OR. ENFERM->MOTIV1="F 27")
      ENC='LISTADO DE VACAS ENFERMAS, '+ALLTRIM(STR(VA))+' VACAS, '+ALLTRIM(STR(PK))+' Lts / '+ALLTRIM(STR(VA))+' VACAS = '+ALLTRIM(STR(PK/VA))
   CASE RO = 9
      @ 17,29 TO 19,50
      @ 18,32 SAY "MENOS DE "
      @ 18,41 GET RODEOS->Rodeo9 PICTURE "99"
      @ 18,44 SAY "Lts."
      SET CURSOR ON
      READ
      SET CURSOR OFF
      SET FILTER TO ULTPRO< RODEOS->RODEO9 .AND. DIALAC>100 .AND. !MARENF .AND. nropar>0
      COUNT FOR ULTPRO< RODEOS->RODEO9 .AND. DIALAC>100 .AND. !MARENF .AND. nropar>0 TO VA
      SUM ULTPRO TO PK FOR ULTPRO<10 .AND. DIALAC>100 .AND. !MARENF .AND. nropar>0
      ENC='LISTADO DE  VACAS A SECAR POR PRODUCCION '+ALLTRIM(STR(VA))+' VACAS, '+ALLTRIM(STR(PK))+' Lts / '+ALLTRIM(STR(VA))+' VACAS = '+ALLTRIM(STR(PK/VA))
   OTHERWISE
      MENU()
ENDCASE


