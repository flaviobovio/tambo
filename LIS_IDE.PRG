FUNCTION LIS_IDE()
CLS
SELECT TAMBO
DBEVAL( { || FIELD->LISTAR:=.F. },{ !DELETED() } )

PRIVATE CO, X, VA:=0
DO WHILE .T.
   CO = SPACE(8)
   @  0, 0 TO 23,79 DOUBLE
   @  0,18 SAY ' LISTADO DE VACAS SELECCIONADAS POR CODIGO '
   @ 10,10 TO 14,65
   @ 12,12 SAY 'INGRESE IDENTIFICACION DE LA VACA A LISTAR:' GET CO PICTURE '@! XXXXXXXX' VALID EXISTE( CO )
   SET CURSOR ON
   READ
   SET CURSOR OFF
   IF ACEPTA()
      VA += IF( FIELD->LISTAR=.F., 1, 0 )
      REPLACE LISTAR WITH .T.
   ENDIF
   MENSAJE('< Espacio > LISTAR    < Enter > CONTINUAR INGRESANDO')
   X=0
   DO WHILE X#13 .AND. X#32
      X=INKEY()
   ENDDO
   IF X = 13
      @24, 0 CLEAR
   ELSE
      SET FILTER TO LISTAR
      RETURN VA
   ENDIF
ENDDO
