FUNCTION NOEXISTE ( CO )
PRIVATE CUR:=SETCURSOR() , R:=.T.  , RE
SET CURSOR OFF
SELECT TAMBO
RE = RECNO()
SEEK CO
IF FOUND() .OR. LEN(CO)<2
   R=.F.
   TONE(136,4)
   SETCOLOR(INVER)
   @ 24, 2 SAY ' ESE CODIGO ES INCORRECTO, REINGRESELO. CUALQUIER TECLA PARA CONTINUAR... '
   SETCOLOR(COMUN)
   INKEY(0)
   @ 24, 0 CLEAR
ENDIF
SETCURSOR(CUR)
GO RE
RETURN R