FUNCTION EXI_TOR ( TO,VF )
PRIVATE CUR:=SETCURSOR(), BAS:=SELECT() , R:=.T.
SET CURSOR OFF
SELECT TOROS
LOCATE FOR TORO = TO
IF ( FOUND() .AND. !VF ) .OR. ( !FOUND() .AND. VF )
   R=.F.
   TONE(136,4)
   SETCOLOR(INVER)
   @ 24, 4 SAY ' ESE TORO ES INCORRECTO, REINGRESELO. CUALQUIER TECLA PARA CONTINUAR... '
   SETCOLOR(COMUN)
   INKEY(0)
   @ 24, 0 CLEAR
ENDIF
SELECT( BAS )
SETCURSOR(CUR)
RETURN R